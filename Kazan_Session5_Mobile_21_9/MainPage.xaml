<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kazan_Session5_Mobile_21_9.MainPage">

    <StackLayout Padding="10">
        <StackLayout Padding="5" Orientation="Horizontal">
            <Label Text="Well Name:" VerticalOptions="CenterAndExpand"/>
            <Picker x:Name="pWell" SelectedIndexChanged="pWell_SelectedIndexChanged" Title="Select your well to view" HorizontalOptions="StartAndExpand"/>
            <Button x:Name="btnEdit" Text="Edit" Clicked="btnEdit_Clicked"/>
        </StackLayout>
        <StackLayout Padding="5" x:Name="stackView">
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="5">
            <Label Text="Well Capacity: " VerticalOptions="CenterAndExpand"/>
            <Label VerticalOptions="CenterAndExpand" x:Name="lblCapacity"/>
            <Button Text="Add" x:Name="btnAdd" Clicked="btnAdd_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
